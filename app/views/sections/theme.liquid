{% if section.settings.font_urls != blank %}
  {% assign font_urls = section.settings.font_urls | split: ';' %}
  {% for x in font_urls %}
    <link href="{{ x }}" rel="stylesheet">
  {% endfor %}
{% endif %}

{% if section.settings.css_overrides != blank %}
  <style>
    {{ section.settings.css_overrides }}
  </style>
{% endif %}

{% if section.settings.custom_head_html != blank %}
  {{ section.settings.custom_head_html }}
{% endif %}

{% if section.settings.bootswatch_theme != blank %}
  {% include 'asset', type: 'bootstrap', version: '4.3.1', bootswatch_theme: section.settings.bootswatch_theme, skip_js: true %}
{% else %}
  {{ 'main/bootstrap_4_custom' | stylesheet_tag }}
{% endif %}
