    {% if section.settings.bootstrap_4_dark != blank %}
      --dark: {{ section.settings.bootstrap_4_dark }};
    {% endif %}

    {% if section.settings.bootstrap_4_breakpoint_xs != blank %}
      --breakpoint-xs: {{ section.settings.bootstrap_4_breakpoint_xs }};
    {% endif %}

    {% if section.settings.bootstrap_4_breakpoint_sm != blank %}
      --breakpoint-sm: {{ section.settings.bootstrap_4_breakpoint_sm }};
    {% endif %}

    {% if section.settings.bootstrap_4_breakpoint_md != blank %}
      --breakpoint-md: {{ section.settings.bootstrap_4_breakpoint_md }};
    {% endif %}

    {% if section.settings.bootstrap_4_breakpoint_lg != blank %}
