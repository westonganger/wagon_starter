    {% endif %}

    {% if section.settings.bootstrap_4_font_family_sans_serif != blank %}
      --font-family-sans-serif: {{ section.settings.bootstrap_4_font_family_sans_serif }};
    {% endif %}

    {% if section.settings.bootstrap_4_font_family_monospace != blank %}
      --font-family-monospace: {{ section.settings.bootstrap_4_font_family_monospace }};
    {% endif %}

    {% if section.settings.bootstrap_4_blue != blank %}
      --blue: {{ section.settings.bootstrap_4_blue }};
    {% endif %}

    {% if section.settings.bootstrap_4_indigo != blank %}
      --indigo: {{ section.settings.bootstrap_4_indigo }};
    {% endif %}

    {% if section.settings.bootstrap_4_purple != blank %}
      --purple: {{ section.settings.bootstrap_4_purple }};
    {% endif %}

    {% if section.settings.bootstrap_4_pink != blank %}
      --pink: {{ section.settings.bootstrap_4_pink }};
    {% endif %}

    {% if section.settings.bootstrap_4_red != blank %}
